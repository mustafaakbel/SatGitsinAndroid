<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragmentler.AnasayfaFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:id="@+id/anasayfaLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" />
    </HorizontalScrollView>
    <LinearLayout
        android:id="@+id/linearLayoutKategoriGoster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        android:background="@drawable/oval">
        <TextView
            android:id="@+id/textViewKategoriAdGoster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/siyah"
            android:padding="7dp"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/buttonKategoriTemizle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@mipmap/ic_kategoritemizle_round"
            android:layout_marginRight="15dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lisViewUrunler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>


</FrameLayout>