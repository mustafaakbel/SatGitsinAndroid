    android:layout_width="300dp"
    android:padding="7dp"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mesajprofilfoto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/profil_ic_avatar"/>

    <TextView
        android:id="@+id/mesajGoster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/alankisi"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/mesajprofilfoto"
        android:text="merhabalar"
        android:textColor="@color/beyaz"
        android:textSize="18sp"
        android:padding="8dp"/>
</RelativeLayout>