<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/KullaniciMesajlasma"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/beyaz"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/kullaniciGorunumuAvatar"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:background="@drawable/profil_ic_avatar"
            android:layout_marginLeft="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:id="@+id/kullaniciGorunumuIsim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/siyah"
                    android:layout_marginLeft="15dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/mesajIletildiImage"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="3dp"
                            android:layout_width="24dp"
                            android:layout_marginRight="4dp"
                            android:layout_height="24dp"
                            android:background="@drawable/ic_gonderildi"
                            android:visibility="gone"/>
                        <TextView
                            android:id="@+id/sonMesaj"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textSize="17sp"/>
                    </LinearLayout>

                </LinearLayout>
        </LinearLayout>
</LinearLayout>